<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/an_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="197dp"


        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/an_iv_urunn_resim_li"
            android:layout_width="254dp"
            android:layout_height="158dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/an_iv_txt_urunismi_li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Urun isim"
                android:textColor="#03A9F4"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/an_iv_txt_urunfiyat_li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Urun fiyat"
                android:textColor="#03A9F4"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/an_iv_txt_urunaciklama_li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Urun Aciklama"
                android:textColor="#00BCD4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/an_iv_btn_Begen_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>